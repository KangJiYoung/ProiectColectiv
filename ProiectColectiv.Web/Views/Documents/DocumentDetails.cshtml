@model DocumentDetailViewModel

@{
    ViewBag.Title = "Document Details";
}

<div class="row">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="ibox">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2>Document Details: @Model.Name</h2>
                        </div>
                        <dl class="dl-horizontal">
                            <dt>Status:</dt>
                            <dd><span class="label label-primary">@Model.DocumentStatus</span></dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <dl class="dl-horizontal">

                        <dt>Version:</dt>
                        <dd>@Model.CurrentVersion</dd>
                        <dt>Date Added:</dt>
                        <dd>@Model.DateAdded.ToShortDateString()</dd>
                        <dt>Last Modified:</dt>
                        <dd>@(Model.LastModified?.ToShortDateString() ?? "N/A")</dd>

                        <dt>Tags:</dt>
                        <ul class="tag-list">
                            @foreach (var tag in Model.Tags)
                            {
                                <li><a href=""><i class="fa fa-tag"></i> @tag</a></li>
                            }
                        </ul>
                    </dl>
                </div>
            </div>
            <div class="row m-t-sm">
                <div class="col-lg-12">
                    <div class="panel blank-panel">
                        <div class="panel-heading">
                            <div class="panel-options">

                            </div>
                        </div>

                        <div class="panel-body">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model DocumentUploadViewModel

<form asp-controller="Documents" asp-action="DocumentUpload" enctype="multipart/form-data">
    <input type="hidden" asp-for="IsTemplate" value="False" />

    <div class="form-group">
        <label asp-for="Tags" class="control-label"></label>
        <div>
            <select name="Tags" multiple data-role="tagsinput" id="input-tags"></select>
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Abstract" class="control-label"></label>
        <div>
            <textarea asp-for="Abstract" class="control-label"></textarea>
            <span asp-validation-for="Abstract" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <div>
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <span class="btn btn-default btn-file">
                    <span class="fileinput-new">Select file</span>
                    <span class="fileinput-exists">Change</span><input asp-for="File" />
                </span>
                <span class="fileinput-filename"></span>
                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
            </div> 
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="Adauga">
</form>